<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/nav_graph"
            app:startDestination="@id/splashFragment">

    <fragment android:id="@+id/splashFragment"
              android:name="org.goodexpert.app.PlexureChallenge.ui.splash.SplashFragment"
              android:label="@string/app_name">
        <action android:id="@+id/action_splashFragment_to_mainFragment"
                app:launchSingleTop="true"
                app:destination="@id/mainFragment"/>
    </fragment>

    <fragment android:id="@+id/mainFragment"
              android:name="org.goodexpert.app.PlexureChallenge.ui.main.MainFragment"
              android:label="@string/app_name"
              tools:layout="@layout/fragment_main"/>
</navigation>