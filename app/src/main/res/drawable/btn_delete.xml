    <item android:state_pressed="true" android:state_enabled="true">
        <shape>
            <solid android:color="#f00"/>
            <padding
                    android:left="8dp"
                    android:top="0dp"
                    android:right="8dp"
                    android:bottom="0dp" />
        </shape>
    </item>

</selector>